<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.aribon.labywhere.ui.screen.profile.edit.EditProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_dark"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/sizing_1"
            android:paddingEnd="@dimen/sizing_2"
            android:paddingStart="@dimen/sizing_2"
            android:paddingTop="@dimen/sizing_1"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/update_profile_input_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/CustomInputHint"
                app:errorTextAppearance="@style/CustomInputError">

                <EditText
                    style="@style/CustomInputText.Dark"
                    android:theme="@style/CustomInputEdit.Dark"
                    android:id="@+id/update_profile_edit_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/generic_firstname"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/update_profile_input_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/CustomInputHint"
                app:errorTextAppearance="@style/CustomInputError">

                <EditText
                    style="@style/CustomInputText.Dark"
                    android:theme="@style/CustomInputEdit.Dark"
                    android:id="@+id/update_profile_edit_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/generic_lastname"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/update_profile_input_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/CustomInputHint"
                app:errorTextAppearance="@style/CustomInputError">

                <EditText
                    style="@style/CustomInputText.Dark"
                    android:theme="@style/CustomInputEdit.Dark"
                    android:id="@+id/update_profile_edit_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/generic_city"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/update_profile_input_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/CustomInputHint"
                app:errorTextAppearance="@style/CustomInputError">

                <EditText
                    style="@style/CustomInputText.Dark"
                    android:theme="@style/CustomInputEdit.Dark"
                    android:id="@+id/update_profile_edit_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/generic_country"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/auth_login_valid_btn"
            style="@style/CustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/generic_validate"
            android:transitionName="@string/transition_button_to_bottom" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
