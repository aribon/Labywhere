<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:paddingStart="@dimen/sizing_1"
  android:paddingEnd="@dimen/sizing_1"
  android:paddingTop="@dimen/sizing_2"
  android:paddingBottom="@dimen/sizing_2"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:text="Click to load data"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textColor="@color/secondary_dark"
    android:id="@+id/test_home_title_text" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:id="@+id/test_home_data_result_text"
    android:textColor="@color/flat_blue"
    android:text="[NONE]"/>

</RelativeLayout>