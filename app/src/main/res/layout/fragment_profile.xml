<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.screen.profile.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:background="@color/primary_dark">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/sizing_2"
            android:paddingEnd="@dimen/sizing_2"
            android:paddingTop="@dimen/sizing_1"
            android:paddingBottom="@dimen/sizing_1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomTextView.Light.Title"
                    android:id="@+id/profile_user_name_text"
                    android:text="Anthony Ribon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomTextView.Light.SubTitle"
                    android:id="@+id/profile_user_infos_text"
                    android:text="24 ans, Paris, France" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View style="@style/CustomDivider.Dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:paddingBottom="@dimen/sizing_1"
        android:paddingEnd="@dimen/sizing_2"
        android:paddingStart="@dimen/sizing_2"
        android:paddingTop="@dimen/sizing_1">

        <FrameLayout
            android:id="@+id/profile_edit_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sizing_1"
            android:minHeight="@dimen/element_size_item"
            android:orientation="vertical">

            <TextView
                style="@style/CustomTextView.Dark.SubTitle"
                android:layout_gravity="start|center_vertical"
                android:text="Editer le profil" />

            <View
                style="@style/CustomDivider.Dark"
                android:layout_gravity="bottom" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/profile_account_parameters_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sizing_1"
            android:minHeight="@dimen/element_size_item"
            android:orientation="vertical">

            <TextView
                style="@style/CustomTextView.Dark.SubTitle"
                android:layout_gravity="start|center_vertical"
                android:text="ParamÃ¨tre du compte" />

            <View
                style="@style/CustomDivider.Dark"
                android:layout_gravity="bottom" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/profile_app_options_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sizing_1"
            android:minHeight="@dimen/element_size_item"
            android:orientation="vertical">

            <TextView
                style="@style/CustomTextView.Dark.SubTitle"
                android:layout_gravity="start|center_vertical"
                android:text="Options de l'application" />

            <View
                style="@style/CustomDivider.Dark"
                android:layout_gravity="bottom" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
